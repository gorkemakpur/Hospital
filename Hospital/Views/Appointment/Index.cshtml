@model Hospital.Data.Models.Tedavi
@{
    ViewBag.Title = "Index";


}


@using (Html.BeginForm("RandevuAl", "Appointment", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0" style="font-size:20px;">
        <tr>
            <h1>Randevu Al</h1>
            <th colspan="1" align="center"></th>
        </tr>


        <tr>
            <td>Hasta TC: </td>
            <td style="font-size:25px; color:blue; padding:15px">
                @Html.Label(Session["hastaTC"].ToString())
            </td>
        </tr>


        <tr>
            <td>Şikayetiniz: </td>
            <td style="font-size:20px;padding:15px">
                @Html.TextAreaFor(m => m.hastaSikayet)
            </td>
        </tr>


        <tr>
            <td>Doktor : </td>
            <td style="font-size:20px;padding:15px">

                @Html.DropDownListFor(x => x.doktorID, (List<SelectListItem>)ViewBag.d1)


            </td">
        </tr>

        <tr>
            <td></td>
            <td style="font-size: 30px; padding: 15px;"> <input type="submit" value="Randevu Al" /></td>
        </tr>
    </table>


}
